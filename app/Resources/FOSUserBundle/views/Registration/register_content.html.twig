{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

    <div class="form-group">
        {{ form_label(form.email, 'Entrer un email',{label_attr : {class : "col-sm-2"}}) }}
        {{ form_errors(form.email, {attr:{ class:"form-erreur"}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.email, {attr:{ class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.first, 'Entrez votre mot de passe',{label_attr : {class : "col-sm-2"}}) }}
        {{ form_label(form.plainPassword.first, {attr:{ class:"form-erreur"}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.first, {attr:{ class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, 'confirmer votre mot de passer',{label_attr : {class : "col-sm-2"}}) }}
        {{ form_label(form.plainPassword.second, {attr:{ class:"form-erreur"}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.second, {attr:{ class:"form-control"}}) }}
        </div>
    </div>

    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>



</form>