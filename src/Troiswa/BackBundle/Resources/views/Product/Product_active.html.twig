{% extends "TroiswaBackBundle::layout_admin.html.twig" %}

{% block title %}
{% endblock %}

{% block h1 %}
    produit
{% endblock %}

{% block fil_ariane %}
    {{ parent() }}
    <li class="active">
        <i class="fa fa-dashboard"></i> voir produits
    </li>

{% endblock %}

{% block content %}

    <a href="{{ path("trois_back_product") }} " class="btn btn-primary">Ajouter un produit</a>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
              <thead>
                    <tr>
                        <th>id</th>
                        <th>Titre</th>
                        <th>prix</th>
                        <th>Action</th>
                    </tr>

              </thead>


                <tbody>
                <h1>Tous les produits </h1>
                {% for unproduct in tableauProducts %}
                    <tr class="active">
                        <td>{{ unproduct.id }}</td>
                        <td>{{  unproduct.title}}</td>
                        <td>{{ unproduct.prix}}</td>
                        <td>
                            <a href="{{ path('trois_back_Product_info', {idprod : unproduct.id} ) }}" class="btn btn-info">voir</a>
                            <a href="{{ path('trois_back_product_editer',{idprod : unproduct.id}) }}" class="btn btn-success">Edite/Modif</a>

                           <!-- <a href="{{ path("trois_back_product_supprimer", {idprod: unproduct.id} ) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer le produit?')">supprimer</a> -->

                            <a href="{{ path("trois_back_product_supprimer", {idprod: unproduct.id} ) }}" class="btn btn-danger">supprimer</a>



                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>


        {% for unProduct in tableauProducts %}
        <ul>

            {% if loop.first %}
                Ceci est le premier article
            {% endif %}

            <li>{{ unProduct.title|default('Titre par défaut') }}</li>
            <li>{{ unProduct.description}}</li>
            <li><a href="{{ path("trois_back_Product_info", { idprod: unProduct.id } ) }}"> Page product info</a></li>
        </ul>
        {% endfor %}

        <p>Le nombre article: {{tableauProducts|length  }} </p>

        date du jour:  {{ "now"|date("m/d/Y") }}

    {{ dump(tableauProducts) }}

        Affichage du tableau en sens inverse

        {% for unProduct in tableauProducts|reverse %}
        {{ unProduct.title}}
        {% endfor %}



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("assets/js/remove.js") }}"></script>
{% endblock  %}
