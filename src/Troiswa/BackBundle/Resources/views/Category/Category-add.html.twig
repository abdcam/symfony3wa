{% extends "TroiswaBackBundle::layout_admin.html.twig" %}

{% block title %}
{% endblock %}

{% block h1 %}
    Category
{% endblock %}

{% block fil_ariane %}
    {{ parent() }}
    <li class="active">
        <i class="fa fa-dashboard"></i> Category
    </li>

{% endblock %}


{% block content %}

    {{ form_start(formcategory, {attr : {class : 'form-horizontal'} } ) }}
    {{ form_errors(formcategory) }}

    <div class="form-group">
        {{ form_label(formcategory.title,"Titre",{label_attr : {class : "col-sm-2"}}) }}
        {{ form_errors(formcategory.title, {attr:{ class:"form-erreur"}}) }}
        <div class="col-sm-10">
            {{ form_widget(formcategory.title, {attr:{ class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(formcategory.description,"Description",{label_attr : {class : "col-sm-2"}}) }}
        {{ form_errors(formcategory.description, {attr:{ class:"form-erreur"}}) }}

        <div class="col-sm-10">
            {{ form_widget(formcategory.description, {attr:{ class:"form-control"}}) }}
        </div>
    </div>


    <div class="form-group">
        {{ form_widget(formcategory.button,{label:"Send"}) }}
    </div>

    {{ form_end(formcategory) }}

{% endblock %}
