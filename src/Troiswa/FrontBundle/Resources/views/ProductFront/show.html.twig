{% extends "TroiswaFrontBundle::layout-front.html.twig" %}


{% block wrapper %}
    <div class="thumbnail">
        <img class="img-responsive" src="{{ asset(product.cover.webPath) }}" alt="">
        <div class="caption-full">
            <h4 class="pull-right">{{ product.prix }} €</h4>
            <h4><a href="#">{{ product.title }}</a>
            </h4>
            <p>{{ product.description }}</p>
        </div>
        <div class="ratings">
            <p class="pull-right">3 reviews</p>
            <p>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star-empty"></span>
                4.0 stars
            </p>
        </div>
    </div>

    <form method="POST" action="{{ path('troiswa_front_cart_add', {id:product.id}) }}">
        <label>Quantité</label>
        <input type="number" name="qty" value="1">
        <button>Ajouter au panier</button>
        <button>Rerour liste produit</button>
    </form>
    <div class="text-right">
        <a href= "{{ path('troiswa_front_cart', {id:product.id}) }}" class="btn btn-success" >Voir le panier</a>
    </div>
    <div class="well">
     <!--cela fait appel à form_comment créer dans le controller ProductFrontController.php -->
        {{ form(form_comment) }}
